{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    "noImplicitAny": true,
    "noResolve": false,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "strict": true,
    "lib": ["es5", "es2015"]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "template",
    "dist",
    "bin"
  ]
}
